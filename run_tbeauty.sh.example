#!/bin/bash
# T-Beauty Application Startup Script
# This script loads environment variables from .env file and starts the application

# Activate virtual environment
source venv/bin/activate

# Load environment variables from .env file
if [ -f ".env" ]; then
    echo "ğŸ“‹ Loading environment variables from .env file..."
    export $(cat .env | grep -v '^#' | xargs)
    echo "âœ… Environment variables loaded"
else
    echo "âš ï¸  Warning: .env file not found!"
    echo "   Please create a .env file with your configuration."
    echo "   You can copy from config/.env.example"
    exit 1
fi

# Verify DATABASE_URL is set
if [ -z "$DATABASE_URL" ]; then
    echo "âŒ ERROR: DATABASE_URL not found in .env file"
    echo "   Please add DATABASE_URL to your .env file"
    exit 1
fi

# Clear any conflicting environment variables
unset DATABASE_URL_OLD

echo "ğŸš€ Starting T-Beauty Business Management System"
echo "ğŸ“Š Database: $(echo $DATABASE_URL | sed 's/postgresql:\/\/[^@]*@/postgresql:\/\/***:***@/')"
echo "ğŸŒ API Documentation: http://localhost:8000/docs"
echo "ğŸ”§ Admin Interface: http://localhost:8000/redoc"
echo ""

# Run the application
python main.py